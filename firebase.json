{
  "functions": {
    "source": "functions/build"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "static/*",
        "destination": "static/*"
      },
      {
        "source": "**",
        "function": "app"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
