<div class="container">
  <form class="form-horizontal">
    <fieldset>
      <legend>Contact Me</legend>
      <div class="form-group">
        <label for="inFName" class="col-sm-2 control-label">First Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inFName" placeholder="First Name" required>
        </div>
      </div>
      <div class="form-group">
        <label for="inLName" class="col-sm-2 control-label">Last Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inLName" placeholder="Last Name" required>
        </div>
      </div>
      <div class="form-group">
        <label for="inEmail" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inEmail" placeholder="Email" required>
        </div>
      </div>
      <div class="form-group">
        <label for="inText" class="col-sm-2 control-label">Message:</label>
        <div class="col-sm-10">
          <textarea class="form-control" rows="10" id="inMessage" placeholder="Your Message for Me!" required></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
          <button type="reset" class="btn btn-default">Reset</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
