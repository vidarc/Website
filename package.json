{
  "name": "Website",
  "version": "0.1.0",
  "private": true,
  "babel": {
    "plugins": [
      "transform-react-jsx",
      "syntax-dynamic-import",
      "react-loadable/babel",
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6.11.1"
          }
        }
      ]
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn build:app && yarn build:server && yarn move:public:index",
    "build:app": "react-scripts build",
    "build:server": "webpack --config webpack.config.server.js --progress --colors",
    "build:semantic": "gulp --gulpfile ./semantic/gulpfile.js build",
    "move:public:index": "mv build/index.html functions/index.html",
    "serve": "firebase serve",
    "watch:server": "webpack --config webpack.config.server.js --progress --colors --watch",
    "test": "react-scripts test --env=jsdom --setupFiles raf/polyfill --setupFiles whatwg-fetch",
    "coverage": "yarn coverage:run && yarn coverage:cleanup",
    "coverage:run": "react-scripts test --env=jsdom --coverage --setupFiles raf/polyfill --setupFiles whatwg-fetch",
    "coverage:cleanup": "rm -rf ./coverage",
    "eject": "react-scripts eject",
    "flow": "flow"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/style/semantic/**/*.js",
      "!src/stories/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "codacy-coverage": "^3.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.73.0",
    "nock": "^9.0.22",
    "nodemon-webpack-plugin": "^3.0.1",
    "raf": "^3.4.0",
    "react-scripts": "^1.0.1",
    "react-test-renderer": "^16.0.0",
    "redux-mock-store": "^1.3.0",
    "semantic-ui": "^2.2.13",
    "webpack": "^3.8.1",
    "webpack-cli": "^2.1.2",
    "webpack-node-externals": "^1.6.0",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "apollo-tracing": "^0.1.3",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cross-fetch": "^2.1.0",
    "dataloader": "^1.4.0",
    "dotenv": "^5.0.0",
    "express": "^4.14.0",
    "firebase-functions": "^1.0.2",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.23.1",
    "node-fetch": "^2.0.0",
    "prop-types": "^15.5.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-loadable": "^5.3.1",
    "react-redux": "^5.0.4",
    "react-router": "^4.0.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.0.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "semantic-ui-react": "^0.80.0",
    "winston": "^3.0.0-rc1"
  }
}
