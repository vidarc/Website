{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn clean:build && yarn clean:node_modules",
    "clean:build": "rm -rf ./packages/*/build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",
    "test": "yarn test:website",
    "test:website": "cd packages/website && yarn test && cd -",
    "library": "lerna run build-library:dev",
    "library:prod": "lerna run build-library:prod",
    "start": "lerna run start",
    "build": "lerna run build",
    "coverage": "lerna run coverage",
    "coverage:cleanup": "lerna run coverage:cleanup",
    "storybook": "yarn --cwd packages/ui/ storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ],
      "*.{css,scss,sass}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "10.12.11",
    "@types/reach__router": "1.2.2",
    "@types/react": "16.7.13",
    "@types/react-dom": "16.0.11",
    "@types/webpack-env": "1.13.6",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-prettier": "3.0.0",
    "husky": "1.2.0",
    "lerna": "3.5.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-react": "3.6.0",
    "typescript": "3.2.1",
    "yarn": "1.12.3"
  }
}
