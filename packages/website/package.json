{
  "name": "@mattailes/website",
  "version": "2.0.3",
  "private": true,
  "proxy": "https://us-central1-server-b6f04.cloudfunctions.net/api/graphql",
  "scripts": {
    "build": "react-scripts build",
    "coverage:cleanup": "rm -rf ./coverage",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "deploy": "firebase deploy --token $FIREBASE_TOKEN",
    "eject": "react-scripts eject",
    "lint": "../../node_modules/.bin/tslint ./src --fix",
    "postbuild": "react-snap",
    "start": "react-scripts start",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "test": "react-scripts test --env=jsdom"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "reactSnap": {
    "exclude": [
      "/starwars/**"
    ]
  },
  "devDependencies": {
    "jest-emotion": "10.0.2",
    "nock": "10.0.4",
    "raf": "3.4.1",
    "react-scripts": "2.1.1",
    "react-snap": "https://github.com/vidarc/react-snap.git",
    "react-test-renderer": "16.6.3",
    "redux-mock-store": "1.5.3",
    "source-map-explorer": "1.6.0",
    "webpack-bundle-analyzer": "3.0.3"
  },
  "dependencies": {
    "@emotion/core": "10.0.2",
    "@emotion/styled": "10.0.2",
    "@mattailes/types": "^2.0.0",
    "@mattailes/ui": "^2.0.2",
    "@reach/router": "1.2.1",
    "apollo-boost": "0.1.22",
    "cross-fetch": "3.0.0",
    "dotenv": "6.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "facepaint": "1.2.1",
    "graphql.macro": "1.0.2",
    "jest-enzyme": "7.0.1",
    "normalize.css": "8.0.1",
    "react": "16.6.3",
    "react-apollo": "2.3.2",
    "react-dom": "16.6.3",
    "react-helmet": "5.2.0",
    "react-redux": "6.0.0",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "sanitize.css": "8.0.0",
    "shortid": "2.2.14"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
