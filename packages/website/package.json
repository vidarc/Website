{
  "name": "@mattailes/website",
  "version": "1.2.0",
  "private": true,
  "proxy": "https://us-central1-server-b6f04.cloudfunctions.net/api/graphql",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "../../node_modules/.bin/eslint ./src",
    "test": "react-scripts test --env=jsdom --setupFiles raf/polyfill --setupFiles whatwg-fetch",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom --setupFiles raf/polyfill --setupFiles whatwg-fetch",
    "coverage": "react-scripts test --env=jsdom --coverage --setupFiles raf/polyfill --setupFiles whatwg-fetch",
    "coverage:cleanup": "rm -rf ./coverage",
    "eject": "react-scripts eject",
    "deploy": "firebase deploy --token $FIREBASE_TOKEN"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "devDependencies": {
    "jest-emotion": "9.2.11",
    "nock": "10.0.2",
    "raf": "3.4.1",
    "react-scripts": "2.1.1",
    "react-test-renderer": "16.6.3",
    "redux-mock-store": "1.5.3",
    "webpack-bundle-analyzer": "3.0.3"
  },
  "dependencies": {
    "@mattailes/types": "^1.2.0",
    "@mattailes/ui": "^1.2.0",
    "@reach/router": "1.2.1",
    "apollo-boost": "0.1.22",
    "cross-fetch": "2.2.3",
    "dotenv": "6.1.0",
    "emotion": "9.2.12",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "facepaint": "1.2.1",
    "graphql.macro": "1.0.2",
    "jest-enzyme": "6.1.2",
    "normalize.css": "8.0.1",
    "react": "16.6.3",
    "react-apollo": "2.3.2",
    "react-dom": "16.6.3",
    "react-emotion": "9.2.12",
    "react-redux": "5.1.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "sanitize.css": "8.0.0",
    "shortid": "2.2.14"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
